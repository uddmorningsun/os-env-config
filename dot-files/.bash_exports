export PATH="$PATH:$HOME/.cargo/bin"
export HISTCONTROL="ignoredups:erasedups"
export PYLINTHOME="/tmp/pylint-$(date '+%Y-%m')"
export PYINSTALLER_CONFIG_DIR=/tmp/pyinstaller-cache-$(date '+%Y')
export PRE_COMMIT_HOME=/tmp/pre-commit-home-$(date '+%Y')

# export GOPROXY=https://mirrors.aliyun.com/goproxy/
export GOPROXY=https://goproxy.cn
export GOCACHE=/tmp/go-build
export GOENV=off

# Proxy/VPN setting in command line mode.
# export http_proxy="http://127.0.0.1:8118"
# export https_proxy="https://127.0.0.1:8118"

# https://ccache.dev/manual/3.7.html#_configuration_settings
export CCACHE_DIR=/tmp/ccache/$(date '+%F')
export CCACHE_LOGFILE=/tmp/ccache/logfile-$(date '+%F')
export CCACHE_COMPRESS=1

export PYTHONNOUSERSITE=1
export PYTHONDONTWRITEBYTECODE=1
